@inherits LayoutComponentBase
@inject NavigationManager NavigationManager



<div class="page">

    <main>
        <article class="content px-4">
            <div class="container d-flex justify-content-center align-items-center h-100">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        @if (PageName != "Crud Products")
                        {
                            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                                <button class="btn btn-danger">
                                    <i class="bi bi-arrow-left"></i> 
                                </button>
                            </NavLink>
                        }
                        <span>@PageName</span>
                    </div>
                    <div class="card-body">
                        @Body
                    </div>
                    <div class="card-footer">
                        Programado por: <strong>João Marcelo Daltro Marques</strong>
                    </div>
                </div>
            </div>
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code {
    private string PageName { get; set; } = String.Empty;

    protected override void OnInitialized()
    {

        var uri = new Uri(NavigationManager.Uri);
        PageName = uri.Segments.LastOrDefault()?.TrimEnd('/') ?? "Home";

        if (PageName == String.Empty)
            PageName = "Crud Products";
    }

}